<Window x:Class="Kamishibai.Wpf.Demo.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kamishibai.Wpf.Demo.View"
        xmlns:viewModel="clr-namespace:Kamishibai.Wpf.Demo.ViewModel;assembly=Kamishibai.Wpf.Demo.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance Type={x:Type viewModel:MainWindowViewModel}, IsDesignTimeCreatable=True}">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{Binding Message}"/>
    </Grid>
</Window>
